
%form{:action=>"https://www.paypal.com/cgi-bin/webscr", :method=>"post", :name=>"paypal_form"} 
  %input{ :type=>"hidden", :name=>"cmd",  :value=>"_xclick"}

  %input{ :type=>"hidden", :name=>"business", :value=>"bizness_email@here" }
  %input{ :type=>"hidden", :name=>"invoice", :id=>'pp_inv_id',  :value => ""} 
  %input{ :type=>"hidden", :name=>"amount",  :id=>'pp_amt_id', :value => ""}

  %input{ :type=>"hidden", :name=>"currency_code", :value=>"AUD"} 
  %input{ :type=>"hidden", :name=>"item_number", :value=>"#{current_user && current_user.id}"}

  %input{ :type=>"hidden", :name=>"item_name", :id=>'it_name_id', :value=>"Auth Ecom Service"}
  %input{ :type=>"hidden", :name=>"notify_url", :value=>"#{authecom_paypalipn_url}"}

  %input{ :type=>"hidden", :name=>"return",  :value=>"#{request.original_url}" }

%script
  function auth_pp_sub(order_id, amt){
  $('#pp_inv_id').val(order_id);
  $('#pp_amt_id').val(amt);
  $('#it_name_id').val("Auth Ecom Order #" + order_id);

  document.forms['paypal_form'].submit();

  }

