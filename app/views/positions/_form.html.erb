<%= form_for(position) do |f| %>
  <% if position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
      <% position.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <% 
  cs = position.get_controllernames

  ApplicationController.subclasses.each do |c| 
	  s = c.to_s
	  s.downcase!
	  s.sub! 'controller', ''
  %>
	  <label>
		  <input type="checkbox" name='cs[]' 

  <%= (cs.include? s)? 'checked':''%>
		  value="<%=s %>" />
		  <%=s %>
	  </label>
	  <br />
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
