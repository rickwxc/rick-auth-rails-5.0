<p id="notice"><%= notice %></p>

<h1>Imgs</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Modelname</th>
      <th>Uuid</th>
      <th>Idx</th>
      <th>Alt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imgs.each do |img| %>
      <tr>
        <td><%= img.modelname %></td>
        <td><%= img.uuid %></td>
        <td><%= img.idx %></td>
		<td><%= img.alt %>
		<%if  img.file.present? %>
		<%= image_tag img.file.url(:thumb) %>
<%end %>
	</td>
        <td><%= link_to 'Show', img %></td>
        <td><%= link_to 'Edit', edit_img_path(img) %></td>
        <td><%= link_to 'Destroy', img, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Img', new_img_path %>
