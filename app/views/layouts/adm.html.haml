  %body
    %a{:href=>"/", :target => '_blank'}
      Website
    %a{:href=>"/adm/"}
      Admin
    %a{:href=>"/adm/users"}
      User
    -if current_user && current_user.id == 1
      ='['
      %a{:href=>"/positions"}
        Positions
      %a{:href=>"/permissions"}
        Permissions
      %a{:href=>"/position2permissions"}
        P2P
      =']'


    = yield
